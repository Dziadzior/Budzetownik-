{
  "name": "Budżetownik",
  "short_name": "Budżet",
  "description": "Prosty i rozbudowany budżetownik.",
  "start_url": "./index.html",
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#ff0000",
  "id": "com.dziadzior.budzetownik",
  "icons": [
    {
      "src": "./web-app-manifest-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "./web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "Dodaj wydatek",
      "short_name": "Wydatek",
      "description": "Dodaj nowy wydatek",
      "url": "/index.html#dodaj-wydatek",
      "icons": [
        {
          "src": "./web-app-manifest-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "display_override": ["minimal-ui"],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "shared-title",
      "text": "shared-text",
      "url": "shared-url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  "screenshots": [
    {
      "src": "./Screen-1.jpg",
      "sizes": "1080x1920",
      "type": "image/png"
    },
    {
      "src": "./Screen-2.jpg",
      "sizes": "1080x1920",
      "type": "image/png"
    }
  ]
}